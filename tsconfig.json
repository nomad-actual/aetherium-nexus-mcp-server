{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es2024",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
